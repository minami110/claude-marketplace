{
  "name": "gdscript-lsp",
  "version": "0.0.0.dev",
  "description": "GDScript language server for Godot Engine",
  "license": "MIT",
  "lspServers": {
    "gdscript": {
      "command": "bash",
      "args": [
        "${CLAUDE_PLUGIN_ROOT}/scripts/godot-lsp-bridge.sh"
      ],
      "extensionToLanguage": {
        ".gd": "gdscript"
      }
    }
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/check-godot-lsp.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
