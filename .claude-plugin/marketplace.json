    {
      "name": "gdunit4-toolkit",
      "source": "./gdunit4-toolkit",
      "description": "gdUnit4 testing framework integration for Godot",
      "version": "1.4.0",
      "license": "MIT",
      "category": "development",
      "strict": false,
      "skills": [
        "./skills/gdunit4-test-runner",
        "./skills/gdunit4-test-writer"
